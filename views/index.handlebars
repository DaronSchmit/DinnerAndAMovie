<div class="container content">
  <h1>Dinner and Moviee</h1>


  <div class="row">
    <div class="col-lg-12 bg-warning text-center">
      <h3>Enter Your Favorite Movie</h3>
      
        <div class="movie-title">
          <input type="text" class="col-md-2" id="movietitle" name="name">
            {{!-- <input type="text" id="bur" name="name"> --}}
          </div>

            <button id="search">Search</button><button id="doStuff">doStuff</button>
      </div>

      <button id="search">Search</button>
    </div>
  </div>
</div>
<div class="container m-3 p-3">
  <div class="row">

    <div class="col-md-6">
      <h2 id="movie-header"> Movies </h2>
      <div class="=content-movie">
        <div class="card invisible" id="movie_card" style="width: 18rem;">
          <img class="card-img-top" id="poster" alt="">
          <div class="card-body">
              <p class="card-text" id="plot"> </p>
              <p class="card-text" id="genre"> </p>
              <p class="card-text" id="actors"> </p>
              <p class="card-text" id="directors"> </p>
              <a href="#" class="btn btn-primary">like Button coming soon</a>
          </div>
        </div>
        {{!-- <ul> --}}
        {{#each movie}}
        {{#unless favorited}}
        {{> movie/movies-block favorited=true}}
        {{/unless}}
        {{/each}}
      </div>
      {{!-- </ul> --}}
    </div>

    <div class="col-md-6">
      <h2 id="dinner-header"> Dinner Recepis</h2>
      <div class="card invisible" id="dinner_card" style="width: 18rem;">
        <img class="card-img-top" id="mealpic" alt="">
        <div class="card-body">
            <h5 class="card-title">Ingredients</h5>
            <ul class="card-text" id="ingredients"> </ul>
            <h5 class="card-title">Instructions</h5>
            <p class="card-text" id="intructions"> </p>
            <a href="#" class="btn btn-primary">like Button coming soon</a>
            <iframe id="video-instructions" width="1903" height="768" frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen></iframe>
        </div>
      </div>


      {{!-- <ul> --}}
      {{#each movie}}
      {{#if favorited}}
      {{> movie/movies-block favorited=false}}
      {{/if}}
      {{/each}}

      {{!-- </ul> --}}
    </div>
  </div>
</div>
</div>
